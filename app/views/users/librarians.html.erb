<h2>Listing Librarians</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Level</th>
    <th>University</th>
    <th>Library</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.level %></td>
        <td><%= user.university %></td>
        <td><%= Library.find(user.library_id).name %></td>
        <td><%= link_to 'Details', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

